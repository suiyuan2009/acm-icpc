/*
题意：要选出s朵花，有n个盒子，每个盒子里的花都一样，问方案数

首先x1+x2+x3+...+xn=s的解有c(s+n-1,n-1)，然后运用容斥原理减掉不符的情况
*/
#include<bits/stdc++.h>
using namespace std;
const int maxn = 105;
const double eps = 1e-6;
const int inf = 0x3fffffff;
typedef long long ll;
const ll mod=1000000007;

int n;
ll s,a[maxn];

ll inv(ll x) {return x == 1 ? 1 : (mod - mod / x) * inv(mod % x) % mod;}

ll C(ll A , ll B) 
{
    if (A < 0 || B > A || B < 0) return 0;
    ll res = 1;
    for (ll i = A ; i > A - B ; -- i)
        res *= i % mod , res %= mod;
    for (ll i = 1 ; i <= B ; ++ i)
        res *= inv(i) , res %= mod;
    return res;
}

int main()
{
    //freopen("ACM/in.in","r",stdin);
    // freopen("ACM/out.out","w",stdout);
    while(~scanf("%d%lld",&n,&s))
    {
        for(int i=0;i<n;i++)scanf("%lld",&a[i]);
        ll ret=0;
        for(int i=0;i<(1<<n);i++)
        {
            int cnt=0;
            ll tt=0;
            for(int j=0;j<n;j++)
                if(i&(1<<j))
                {
                    tt+=a[j]+1;
                    cnt++;
                }
            if(tt>s)continue;
            if(cnt&1)ret=(ret+mod-C(s-tt+n-1,n-1))%mod;
            else ret=(ret+C(s-tt+n-1,n-1))%mod;
        }
        printf("%lld\n",ret);
    }
    return 0;
}
